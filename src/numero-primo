const input = Number(prompt("Inserisci un numero:"));
// TODO #1: Controllare che il numero inserito sia effettivamente un numero.
// TODO #2: Controllare che il numero inserito sia intero.
let isPrimeboolean;
let valuenumber;
if (input <= 1)
{
    isPrime = true;
    value = 2;
}
else
{
    isPrime = false;
    value = input;
}
while (!isPrime)
{
    isPrime = true;
    value += 1;
    if (value % 2 == 0) { isPrime = false; }
    else
    {
        let divisor = 3;
        while ((isPrime) && (divisor <= Math.sqrt(value)))
        {
            if (value % divisor == 0) { isPrime = false; }
            divisor += 2;
        }
    }
}
console.log("Il prossimo numero primo Ã¨: " + value);
 
 